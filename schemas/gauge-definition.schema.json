{
  "title": "JSON schema for the Gauge E2e Steps Project",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "pageElementDefinition": {
      "properties": {
        "id": {
          "type": "string"
        },
        "selector": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "tagName": {
          "type": "string"
        }
      }
    },
    "pageObjectDefinition": {
      "required": [
        "url",
        "name"
      ],
      "properties": {
        "url": {
          "description": "The uri pointing to the page",
          "type": "string",
          "format": "uri"
        },
        "name": {
          "description": "The page object name",
          "type": "string"
        },
        "pageObjectClass": {
          "description": "The path of the pageObject class",
          "type": "string"
        },
        "elements": {
          "type": "object",
          "patternProperties": {
             ".{1,}": { "$ref": "#/definitions/pageElementDefinition" }
          }
        }
      }
    },
    "gaugeE2EDefinition": {
      "type": "object",
      "required": [
        "pages"
      ],
      "properties": {
        "pages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pageObjectDefinition"
          }
        }
      }
    }
  },

  "$ref": "#/definitions/gaugeE2EDefinition"
}
